<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="assets/css/main.css?id=48528" />
		    <noscript><link rel="stylesheet" href="assets/css/noscript.css" /></noscript>
      </head>
    <body>        
        <table class="default">
            <thead>
              <tr>
                <th class="tg-0pky">NOM</th>
                <th class="tg-0pky">PUBLICATION</th>
                <th class="tg-0pky">SYNOPSIS</th>
                <th class="tg-0pky">AVIS</th>
              </tr>
            </thead>
            <tbody>
                {% for (title, date_published, content) in similars %}
              <tr>
                <td id="title-result-{{loop.index}}">{{title}}</td>
                <td id="date-published-{{loop.index}}">{{date_published}}</td>
                <td id="content-{{loop.index}}">{{content}}</td>

                <!-- Pour donner son avis -->
                <td> 
                  <button type="button" class="thumb-button" id="thumb-up-button-result-{{loop.index}}" onclick="thumbUp()">
                    <i class="icon solid fa-thumbs-up"></i>
                  </button>
                  <button type="button" class="thumb-button" id="thumb-down-button-result-{{loop.index}}" onclick="thumbDown()">
                    <i class="icon solid fa-thumbs-down"></i>
                  </button>
                </td>

              </tr>
                {% endfor %}
            </tbody>
            </table> 
    </body>
</html>